# Memories CLI configuration (.env.dist)
# Copy to .env and adjust values. Lines starting with # are comments.

USERID=1000
GROUPID=1000

# --- Database ---
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=memories
DB_USER=memories
DB_PASS=memories

MEMORIES_HOME_LAT=
MEMORIES_HOME_LON=

# Verzeichnisse
MEMORIES_MEDIA_DIR=/var/lib/memories/media
MEMORIES_THUMBNAIL_DIR=/var/lib/memories/thumbnails

# Tools
FFPROBE_PATH=/usr/bin/ffprobe

# Nominatim â€“ bitte eigene Kontaktadresse angeben
NOMINATIM_BASE_URL="https://nominatim.openstreetmap.org"
NOMINATIM_EMAIL="you@example.com"